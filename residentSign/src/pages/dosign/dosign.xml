<view class="container">
  <view class="body">
    <view class="personInfo">
      <view class="left-avatar">
        <image wx:if='{{!dosignPersonInfo.avatar}}' src="../../assets/img/zbl_avatar.png" alt="头像">
        <image v-else :src="imgReqUrl + avatar" alt="头像" style="border-radius:50%;">
      </view>
      <view class="right-info">
        <text class="withline">
          <text class="name">{{personName}}</text>
          <text class="age">{{age}}岁</text>
          <image :src="sex ==='1'?sexImg[0]:sexImg[1]" alt="性别" class="sex">
        </text>
        <text><text class="grey">证件类型</text><text>{{idType | filterIdType}}</text></text>
        <text><text class="grey">证件号码</text><text>{{idOrNo}}</text></text>
      </view>
    </view>
    <view class="divide"></view>
    <view class="container addressPhone">
      <mt-field label="手机号码" type="tel" :value='zbl_phoneNo' @input='editPhoneNo'></mt-field>
      <mt-cell title="居住地址" is-link @click.native='clkHomeTown'>
        <text v-if='zbl_address.decText' class="hideMore">{{zbl_address.decText}}</text>
        <text v-else>请输入</text>
      </mt-cell>
    </view>
